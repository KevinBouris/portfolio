<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta lang="fr">
        <title>{% block title %}Développeur web - Kévin Bourisville{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css" integrity="sha384-vSIIfh2YWi9wW0r9iZe7RJPrKwp6bG+s9QZMoITbCckVJqGCCRhc+ccxNcdpHuYu" crossorigin="anonymous">
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

    </head>
    <body>
        <div class="container-fluid">
            <div class="row navbar-dark navBack fixed-top">
                <div class="col-4">
                    <nav class="navbar navBack">
                        <a class="navbar-brand" href="{{ path('home') }}">Kévin Bourisville</a>
                    </nav>
                </div>
                <div class="col-8 d-flex justify-content-end">
                    <nav class="navbar navbar-expand-lg navbar-dark navBack">
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                            <div class="navbar-nav">
                                <a class="nav-item nav-link active" href="{{ path('home') }}"><i class="fas fa-home"></i><span class="sr-only">(current)</span></a>
                                <a class="nav-item nav-link" href="#">Services</a>
                                <a class="nav-item nav-link" href="#">Compétences</a>
                                <a class="nav-item nav-link" href="#">Portefolio</a>
                                <a class="nav-item nav-link" href="#">A Propos</a>
                                <a class="nav-item nav-link" href="#">Contact</a>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
            <div class="row">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block vh-100 w-100" src="{{ asset('image/laptop.jpg') }}" alt="Ordinateur de développeur posé sur un bureau">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block vh-100 w-100" src="{{ asset('image/workplace.jpg') }}" alt="Bureau minimaliste d'un développeur web">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block vh-100 w-100" src="{{ asset('image/notebook.jpg') }}" alt="Vue de dessus d'un bureau avec un café, un ordinateur et des lunettes">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="button-color" aria-hidden="true"><i class="fas fa-chevron-left fa-3x"></i></span>
                        <span class="sr-only ">Previous</span>
                    </a>
                    <a class="carousel-control-next " href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="button-color" aria-hidden="true"><i class="fas fa-chevron-right fa-3x"></i></span>
                        <span class="sr-only ">Next</span>
                    </a>
                </div>
            </div>

            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
